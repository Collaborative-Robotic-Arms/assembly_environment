<?xml version="1.0" encoding="utf-8"?>
<!-- This XACRO contains the table and camera models exported from SolidWorks. -->
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="environment">
  
  <!-- abb_table link definition (Root of the environment) -->
  <link name="abb_table">
    <inertial>
      <origin xyz="0.3325 0 -0.561085" rpy="0 0 0" />
