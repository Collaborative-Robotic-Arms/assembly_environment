      <inertia ixx="80.377" ixy="0" ixz="0" iyy="114.089" iyz="0" izz="100.823" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://assembly_environment/meshes/abb_table.STL" />
      </geometry>
      <material name="">
        <color rgba="0.792 0.820 0.933 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://assembly_environment/meshes/abb_table.STL" />
