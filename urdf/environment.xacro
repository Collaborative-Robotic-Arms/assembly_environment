    </collision>
  </link>
  <joint name="ar4_frame" type="fixed">
    <origin xyz="1.11 0 0.0065" rpy="0 0 3.14159265358979" />
    <parent link="abb_table" />
    <child link="ar4_table" />
  </joint>

